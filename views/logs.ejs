<!DOCTYPE html>
<html>
    <head>
        <Title>Logs</Title>
        <meta name="description" content="This is the description">
        <meta name="viewport" content="width = device-width, initial scale = 1">
        <link rel="stylesheet" type="text/css" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/ionicons/2.0.1/css/ionicons.min.css">
        
        <style>
            .footer-dark {
                padding:50px 0;
                color:#f0f9ff;
                background-color:#282d32;
                margin-top: 100px;
            }
    
            .footer-dark h3 {
                margin-top:0;
                margin-bottom:12px;
                font-weight:bold;
                font-size:16px;
            }
    
            .footer-dark ul {
                padding:0;
                list-style:none;
                line-height:1.6;
                font-size:14px;
                margin-bottom:0;
            }
    
            .footer-dark ul a {
                color:inherit;
                text-decoration:none;
                opacity:0.6;
            }
    
            .footer-dark ul a:hover {
                opacity:0.8;
            }
    
            @media (max-width:767px) {
                .footer-dark .item:not(.social) {
                    text-align:center;
                    padding-bottom:20px;
                }
            }
    
            .footer-dark .item.text {
                margin-bottom:36px;
            }
    
            @media (max-width:767px) {
                .footer-dark .item.text {
                    margin-bottom:0;
                }
            }
    
            .footer-dark .item.text p {
                opacity:0.6;
                margin-bottom:0;
            }
    
            .footer-dark .item.social {
                text-align:center;
            }
    
            @media (max-width:991px) {
                .footer-dark .item.social {
                    text-align:center;
                    margin-top:20px;
                }
            }
    
            .footer-dark .item.social > a {
                font-size:20px;
                width:36px;
                height:36px;
                line-height:36px;
                display:inline-block;
                text-align:center;
                border-radius:50%;
                box-shadow:0 0 0 1px rgba(255,255,255,0.4);
                margin:0 8px;
                color:#fff;
                opacity:0.75;
            }
    
            .footer-dark .item.social > a:hover {
                opacity:0.9;
            }
    
            .footer-dark .copyright {
                text-align:center;
                padding-top:24px;
                opacity:0.3;
                font-size:13px;
                margin-bottom:0;
            }
        </style>
    </head>
    <body style="margin-top: 70px;">
        <nav class="navbar navbar-expand-md navbar-dark bg-dark fixed-top">
            <div class="navbar-collapse collapse w-100 order-1 order-md-0 dual-collapse2">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        <a class="nav-link">My Website</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/store">Store</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/logs">Logs</a>
                    </li>
                </ul>
            </div>
            <div class="navbar-collapse collapse order-3 dual-collapse2 mx-auto">
                <ul class="navbar-nav mr-auto" style="font-size: 20px;">
                    <% if (user) { %>
                        <!-- <li class="nav-item">
                            <a class="nav-link">(Logo)</a>
                        </li> -->
                        <li class="nav-item">
                            <a class="badge badge-dark" href="/users/dashboard">Welcome, <%= user.name %></a>
                        </li>
                        <li class="nav-item" style="padding-left: 10px;">
                            <a class="badge badge-dark" href="/users/logout">Log out</a>
                        </li>
                    <% } else { %>
                        <li class="nav-item">
                            <a class="badge badge-dark" href="/users/login">Log in</a>
                        </li>
                        <li class="nav-item" style="padding-left: 10px;">
                            <a class="badge badge-dark" href="/users/register">Sign up</a>
                        </li>
                    <% } %>
                </ul>
            </div>
        </nav>

        <section class="content-section container log-container">
            <% log.logs.forEach(function(item){ %>
                <div class="card shadow mb-4 rounded" data-item-id="<%= item.type + item.title %>">
                    <div class="card-header">
                        <ul class="list-group list-group-horizontal">
                            <li style="display:inline; font-size:25px; margin-right:5px;">
                                <% if (item.type == "Commit") { %>
                                    <badge class="badge badge-success p-2"><%= item.type %></span>
            
                                <% } else if (item.type == "Patch") { %>
                                    <badge class="badge badge-danger p-2"><%= item.type %></span>
                                
                                <% } else if (item.type == "Update") { %>
                                    <badge class="badge badge-warning p-2"><%= item.type %></span>
            
                                <% } else { %>
                                    <badge class="badge badge-secondary p-2"><%= item.type %></span>
                                <% } %>
                            </li>
                            <li  style="display:inline; font-size:25px;">
                                <badge class="badge badge-primary p-2"><%= item.date %></span>
                            </li>
                        </ul>
                    </div>
                    <ul class="list-group list-group-flush pl-4 pr-4 pt-3 pb-3">
                        <h3><%= item.title %></h3>
                        <% item.details.forEach(function(p){ %>
                            <p><%= p.p %></p>
                        <% }) %>
                    </ul>
                </div>
            <% }) %>
        </section>

        <div class="footer-dark sticky">
            <footer>
                <div class="container">
                    <div class="row">
                        <div class="col-sm-6 col-md-3 item">
                            <h3>Services</h3>
                            <ul>
                                <li><a href="#">Web design</a></li>
                                <li><a href="#">Development</a></li>
                                <li><a href="#">Hosting</a></li>
                            </ul>
                        </div>
                        <div class="col-sm-6 col-md-3 item">
                            <h3>About</h3>
                            <ul>
                                <li><a href="#">Company</a></li>
                                <li><a href="#">Team</a></li>
                                <li><a href="#">Careers</a></li>
                            </ul>
                        </div>
                        <div class="col-md-6 item text">
                            <h3>Header</h3>
                            <p>This is a test website designed for web development along with security testing and patching.</p>
                        </div>
                        <div class="col item social">
                            <a href="https://github.com/mproctor17/personal-website" style="margin-right:15px;">
                                <i class="icon ion-social-github"></i>
                            </a>
                            <a href="https://www.linkedin.com/in/matthew-proctor">
                                <i class="icon ion-social-linkedin"></i>
                            </a>
                        </div>
                    </div>
                    <p class="copyright">Matthew Proctor Â© 2020</p>
                </div>
            </footer>
        </div>
    </body>
</html>